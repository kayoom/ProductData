        </div>

        <div id="properties">
          <h4>Produktdetails</h4>
          <table>
            <tbody>
              {{#each Properties}}
              <tr>
                <th>{{Key}}:</th>
                <td>{{Value}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>

        <div id="selling-points">
          <ul>
            {{#each SellingPoints}}
            <li>{{this}}</li>
