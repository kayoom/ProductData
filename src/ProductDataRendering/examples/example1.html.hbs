<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>{{Name}}</title>
</head>
<body>
    <h1>{{Name}}</h1>
    <h2>{{Price}}</h2>

    <img src="{{#imgurl MainImageURL 400}}"/>

    <div id="description">
        {{Description}}
    </div>

    <div id="selling-points">
        <ul>
        {{#each SellingPoints}}
            <li>{{this}}</li>
        {{/each}}
        </ul>
    </div>

    <div id="images">
        {{#each ImageURLs}}
            <img src="{{#imgurl this 200}}"/>
        {{/each}}
    </div>

    <div id="properties">
        <table>
            <tbody>
                {{#each Properties}}
                    <tr>
                        <th>{{Key}}</th>
                        <td>{{Value}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div id="variants">
        <table>
            <tbody>
                {{#each Variants}}
                <tr>
                    <th>
                    {{#each Values}}
                        {{Value}}
                        <br/>
                    {{/each}}
                    </th>
                    <td>{{Item.Price}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>